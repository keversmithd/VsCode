{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "X:\\Include Path Packages\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I","${workspaceFolder}\\ASIOSDK\\headers",
                "${workspaceFolder}\\ASIOSDK\\sources\\*.cpp",
                "-I","${workspaceFolder}\\headers",
                "${workspaceFolder}\\sources\\*.cpp",
                "-lole32", "-lwinmm", "-luuid",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}",
                
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", ".", "--target", "AsioFresh"],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}